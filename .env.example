# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development  # development, staging, production

# Minecraft Server Configuration
MINECRAFT_HOST=localhost
MINECRAFT_HTTP_PORT=9000
MINECRAFT_RCON_PORT=25575
MINECRAFT_RCON_PASSWORD=minecraftmcp

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# JWT Authentication
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Redis Configuration (for task queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage Configuration
STORAGE_BUCKET=templates
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100  # requests per hour
RATE_LIMIT_BLOCK_PLACE=20  # requests per minute

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_KEY_HEADER=X-API-Key

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=True

# Feature Flags
ENABLE_WEBSOCKETS=True
ENABLE_ASYNC_TASKS=True
ENABLE_TEMPLATE_SHARING=True